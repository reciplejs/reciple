{
  "name": "@reciple/monorepo",
  "license": "GPL-3.0-only",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "clean": "rimraf -g ./packages/*/bin ./packages/*/dist",
    "build": "lerna run build",
    "build:tsc": "lerna run build:tsc",
    "check": "lerna run check",
    "watch": "tsc --watch --noEmit",
    "test": "npm run dev -w example",
    "publish-dev": "lerna run build && lerna publish prerelease",
    "publish-latest": "lerna run build && lerna publish",
    "docs": "rimraf -g ./packages/*/docs/docs.json && lerna run docs",
    "create": "npm run build && node --enable-source-maps ./packages/reciple/dist/bin/reciple.js create example",
    "create:default": "npm run build && node --enable-source-maps ./packages/reciple/dist/bin/reciple.js create example -D"
  },
  "devDependencies": {
    "@types/node": "^22.16.3",
    "esbuild-plugin-version-injector": "^1.2.1",
    "lerna": "^8.2.2",
    "rimraf": "^6.0.1",
    "terser": "^5.43.1",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3"
  }
}
