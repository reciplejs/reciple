{
  "name": "@reciple/monorepo",
  "license": "LLGPL-3.0-only",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*",
    "example"
  ],
  "scripts": {
    "clean": "rimraf -g ./packages/*/bin ./packages/*/dist",
    "build": "lerna run build",
    "check": "lerna run check",
    "test": "npm run dev -w example",
    "publish-dev": "lerna publish prerelease",
    "publish-latest": "lerna publish",
    "docs": "rimraf -g ./packages/*/docs/docs.json && lerna run docs",
    "test-create": "npm run build && node --enable-source-maps ./packages/reciple/dist/bin/reciple.js create test-template",
    "test-create:default": "npm run build && node --enable-source-maps ./packages/reciple/dist/bin/reciple.js create test-template -D"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "lerna": "^9.0.3",
    "nx": "^22.2.3",
    "rimraf": "^6.1.2",
    "rolldown": "^1.0.0-beta.54",
    "tsdown": "^0.17.3",
    "typescript": "^5.9.3"
  }
}
