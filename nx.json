{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "targetDefaults": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "{projectRoot}/dist"
      ],
      "inputs": [
        "{projectRoot}/src/**/*",
        "{projectRoot}/*.json",
        "{projectRoot}/tsdown.config.ts",
        "{workspaceRoot}/tsdown.config.ts"
      ],
      "cache": true
    },
    "docs": {
      "outputs": [
        "{projectRoot}/docs/docs.json"
      ],
      "inputs": [
        "{projectRoot}/src/**/*"
      ]
    }
  },
  "namedInputs": {
    "default": [
      "{projectRoot}/**/*",
      "sharedGlobals"
    ],
    "sharedGlobals": [],
    "production": [
      "default"
    ]
  }
}