{
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "reciple.config.ts",
    "./config/**/*"
  ],
  "compilerOptions": {
    "baseUrl": "./",
    "rootDir": "./src",
    "outDir": "./modules",
    "allowJs": true,
    "jsx": "react-jsx",
    "jsxImportSource": "@reciple/jsx",
    "paths": {
      "@/*": ["./src/*"]
    },
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "verbatimModuleSyntax": true
  }
}