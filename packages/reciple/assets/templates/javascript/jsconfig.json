{
  "extends": "@reciple/utils/tsconfig.json",
  "include": [
    "./src/**/*{.js,.jsx}"
  ],
  "compilerOptions": {
    "baseUrl": "./",
    "rootDir": "./src",
    "outDir": "./modules",
    "allowJs": true,
    "jsx": "react-jsx",
    "jsxImportSource": "reciple",
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}